{
  "name": "crypto-chart",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "npm run build && npm run serve && npm run batch-init && npm run batch-daily",
    "build": "npm-run-all build-client build-server",
    "build-client": "tsc && vite build",
    "build-server": "tsc -p tsconfig.server.json",
    "batch-init": "node server/dist/batch/init.js",
    "batch-daily": "node server/dist/batch/daily.js",
    "serve": "node server/dist/app.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "dev": "npm-run-all --parallel dev-server dev-client",
    "dev-client": "vite",
    "dev-server": "nodemon --esm server/app.ts",
    "dev-batch-init": "npx ts-node --esm server/batch/init.ts",
    "dev-batch-daily": "npx ts-node --esm server/batch/daily.ts"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@types/config": "^3.3.0",
    "@types/node-cron": "^3.0.8",
    "apexcharts": "^3.42.0",
    "axios": "^1.5.0",
    "config": "^3.3.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.0.0",
    "mongoose": "^7.5.0",
    "node-cron": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-apexcharts": "^1.4.1",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "react-router-dom": "^6.15.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  }
}
